<% provide(:title, "Forum") %>

<div class="container top-container">
<%= link_to "New Question", new_question_path, class: "btn btn-primary btn-question"%>
  <div class="row">
    <div class="col-lg-8">
    <div class="card card-header bg-light">
      <h2>Recent Questions</h2>
    </div>
      <% @questions.each do |question|%>
      <div class="card card-body bg-light p-3">
        <h4> <%= question.title %></h4>
        <p><%= question.body %></p>
          <div>
            <p><i>Answers</i></p>
            <span class="badge badge-primary"></span>
          </div>
          <div>
            <%= link_to "Read More", question_path(question), :class => 'btn btn-primary btn-sm'%>
          </div>
        </div>
        <br>
        <%end%>
    </div>

    <div class="col-lg-4">
      <div class="card">
        <div class="card-header text-center">
          <h5> Frequently asked </h5>
        </div>

        <div class="card-body">
          </div>

      </div>
    </div>
  </div>
</div>
