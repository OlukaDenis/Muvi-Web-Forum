<% provide(:title, "#{@question.title}") %>
<div class = "container">
  <div class="row">
    <div class="col-lg-8">
      <div class="card">
          <div class="card-header bg-light">
            <h3><%= @question.title%></h3>
          </div>
          <div class="card-body bg-light">
            <p><%= @question.body%></p>

            <div>
            <%= link_to ' Answer', '#', :class => 'btn btn-default fa fa-comment' %>
            <%= link_to ' Edit', edit_question_path(@question), :class => 'btn btn-default fa fa-edit ' %>
            <%= link_to ' Delete', question_path(@question),
            method: :delete,
            data: { confirm: 'You are about delete this question, Are you sure?'},
            :class => 'btn btn-default fa fa-trash' %>
            </div>
          </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card">
        <div class="card-header text-center">
          <h5> Recent Questions </h5>
        </div>

        <div class="card-body">
          </div>

      </div>
      
    </div>
  </div>  
</div>